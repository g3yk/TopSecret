<% content_for :head do %>
  <%= stylesheet_link_tag 'nicepage' %>
  <%= stylesheet_link_tag 'index' %> 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
<% end %>

<style>
  .img-vibrant {
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    filter: brightness(1.1) contrast(1.2);
  }

  .img-vibrant:hover {
    transform: scale(1.05);
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
  }

  /* Background image styling */
  .background-container {
    background-image: url('<%= asset_path("login.jpg") %>');
    background-size: cover;
    background-position: center;
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh; /* Ensure full-screen height */
    
  }

  .form-container {
    background-color: rgba(255, 255, 255, 0.9); /* Slight transparency */
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    width: 100%;
    max-width: 400px; /* Set a max width for the form */
  }

  .form-label {
    font-weight: bold;
  }

  .form-control {
    border-radius: 5px;
  }

  .btn-primary {
    border-radius: 5px;
    transition: background-color 0.3s ease;
  }

  .btn-primary:hover {
    background-color: #0056b3;
  }
</style>

<section class="container-fluid p-0">
  <div class="row no-gutters background-container">
    <!-- Form Section -->
    <div class="col-lg-6 d-flex justify-content-center">
      <div class="form-container">
        <h2 class="text-center mb-4">Giriş Yapın</h2>
        <%= form_with url: login_path, scope: :user, class: "signup-form" do |form| %>
          <!-- Email / Username -->
          <div class="mb-3">
            <%= form.label :login, "Email / Kullanıcı Adı", class: "form-label" %>
            <%= form.text_field :login, placeholder: "Email ya da kullanıcı adınızı giriniz", class: "form-control", required: true %>
          </div>

          <!-- Password -->
          <div class="mb-3">
            <%= form.label :password, "Parola", class: "form-label" %>
            <%= form.password_field :password, placeholder: "Parolanızı giriniz", class: "form-control", required: true %>
          </div>

          <!-- Submit Button -->
          <div class="text-center">
            <%= form.submit "Giriş Yap", class: "btn btn-primary w-100", style:"background-color:rgba(48, 151, 209, 1);" %>
          </div>
        <% end %>

        <% if flash.now[:error] %>
          <div class="text-center text-danger mt-3">
            <%= flash.now[:error] %>
          </div>
        <% end %>

        <!-- Sign-up Link -->
        <div class="text-center mt-4">
        <%= link_to sign_up_path, 
        class: "icon-link icon-link-hover text-decoration-none", 
        style: "--bs-link-hover-color-rgb: 25, 135, 84;" do %>
      Bir hesabınız yok mu? Kayıt olun.
      <svg class="bi" aria-hidden="true">
        <use xlink:href="#arrow-right"></use>
      </svg>
    <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
